{
    "name": "subiabre/apio",
    "description": "Minimalist component based library to write web APIs.",
    "type": "library",
    "keywords": [
        "library",
        "web",
        "API",
        "simple"
    ],
    "support": {
        "email": "subiabrewd@gmail.com"
    },
    "require": {
        "nikic/fast-route": "^1.3",
        "symfony/http-foundation": "^5.1",
        "symfony/console": "^5.1",
        "sebastian/version": "^3.0",
        "symfony/serializer": "^5.1",
        "symfony/property-access": "^5.1",
        "amphp/http-server": "^2.1",
        "amphp/http-server-router": "^1.0",
        "monolog/monolog": "^2.1",
        "amphp/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Facu",
            "email": "subiabrewd@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": { "Apio\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Apio\\Tests\\": "tests/" }
    },
    "bin": ["apio"],
    "scripts": {
        "test": "phpunit",
        "coverage": "phpunit --coverage-clover coverage-clover.xml --whitelist src"
    }
}
